package exo3;

import javax.swing.JLabel;
import javax.swing.JPanel;
import javax.swing.JTextArea;


public class PanelInfos extends JPanel{

	JTextArea TXAInfos;
	JLabel infos;
	
	public PanelInfos() {
		TXAInfos=new JTextArea("Roman \nAuteur : Terry Pratchett \nTitre : Mortimer \nEditeur : L'Atalante \nNombre exemplaires : 1 \nNombre exemplaires sortis : 0 \nGenre : Fantasy");
		infos=new JLabel("Infos : ");
		add(infos);
		add(TXAInfos);
	}
	
}
